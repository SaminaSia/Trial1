#include <stdio.h>
#include <string.h>

void convertLessThanThousand(int num, char *result) {
    char *units[] = {"", "One", "Two", "Three", "Four", "Five", "Six", "Seven", "Eight", "Nine"};
    char *tens[] = {"", "Ten", "Twenty", "Thirty", "Forty", "Fifty", "Sixty", "Seventy", "Eighty", "Ninety"};
    char *teens[] = {"", "Eleven", "Twelve", "Thirteen", "Fourteen", "Fifteen", "Sixteen", "Seventeen", "Eighteen", "Nineteen"};

    if (num == 0) {
        return;
    } else if (num < 10) {
        sprintf(result, "%s", units[num]);
    } else if (num < 20) {
        sprintf(result, "%s", teens[num - 10]);
    } else if (num < 100) {
        sprintf(result, "%s %s", tens[num / 10], units[num % 10]);
    } else {
        sprintf(result, "%s Hundred and ", units[num / 100]);
        convertLessThanThousand(num % 100, result + strlen(result));
    }
}

void numberToWords(int number, char *result) {
    if (number == 0) {
        sprintf(result, "Zero");
        return;
    } else if (number < 0) {
        sprintf(result, "Negative ");
        numberToWords(-number, result + 9);
        return;
    } else {
        result[0] = '\0';
        if (number >= 10000000) {
            convertLessThanThousand(number / 10000000, result);
            strcat(result, "Crore ");
            number %= 10000000;
        }
        if (number >= 100000) {
            convertLessThanThousand(number / 100000, result + strlen(result));
            strcat(result, "Lakh ");
            number %= 100000;
        }
        if (number >= 1000) {
            convertLessThanThousand(number / 1000, result + strlen(result));
            strcat(result, "Thousand ");
            number %= 1000;
        }
        convertLessThanThousand(number, result + strlen(result));
    }
}

int main() {
    int number = 954236871;
    char result[1000];
    
    numberToWords(number, result);
    
    printf("%d in words: %s\n", number, result);

    return 0;
}
